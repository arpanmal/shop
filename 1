#include <stdio.h>


int saler(int),ven(int);


int main()
{
int inv=1000,c;

saler(inv);
  int saler(inv){
      int sold;

    if(inv==1000){
        printf("inventory is full now %d\n", inv);
    }

        printf("how many item you want to buy\n");
         scanf("%d",&sold);
         inv=inv-sold;

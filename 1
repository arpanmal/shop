#include <stdio.h>
int saller(int),ven(int);

int main()
{
int inv=1000;
printf("%d item are available\n",saller(inv));
}
  int saller(inv){
      int sold;
    if(inv==1000){
        printf("inventory is full now\n");
    }

        printf("how many item you want to buy\n");
         scanf("%d",&sold);
         inv=inv-sold;
        
        if(inv<=250){
printf("inventory is below them 75 percent Wait a minute for it to fill up\n");
        ven(inv);
    }

    if(500>=inv&&inv>250){
        printf("Over 50 percent of the products have been sold\n");
    }
    return inv;
 Saller();

  }
    int ven(inv){

    int m=1000-inv;
    inv=inv+m;
    
    printf("%d item add to inventory\n",m);

    return inv;
    }
